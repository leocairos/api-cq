{
  "apps" : [
    {
      "name": "api-cq",
      "script": "dist/shared/infra/http/server.js",
      "args":["api"],
      "max_memory_restart": "500M",
      "time": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "restart_delay": 4000,
      "max_restarts" : 500,
      "watch": ["server", "client"],
      "watch_delay": 3000,
      "ignore_watch": [ "[\/\\]\\./" , "node_modules"],
      "watch_options": {
        "followSymlinks": false
      }
    }
  ]
}
